{
    "compilerOptions": {
        "outDir": "dist",
        "rootDir": "src",

        "module": "NodeNext",
        "moduleResolution": "node",
        "target": "ESNext",

        "lib": ["ESNext"],

        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,

        "baseUrl": ".",
        "paths": {
            "@client/*": ["src/client/*"],
            "@client": ["src/client/index"],

            "@mongoose/*": ["src/mongoose/*"],
            "@mongoose": ["src/mongoose/index"],

            "@schemas/*": ["src/mongoose/schemas/*"],
            "@schemas": ["src/mongoose/schemas/index"],
            
            "@/*": ["src/*"]
        },

        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true
    },

    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
}