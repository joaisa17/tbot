{
    "compilerOptions": {
        "outDir": "dist",
        "rootDir": "src",

        "module": "NodeNext",
        "moduleResolution": "node",
        "target": "ESNext",

        "lib": ["ESNext"],

        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,

        "baseUrl": ".",
        "paths": {
            "@client": ["src/client/index"],
            "@client/*": ["src/client/*"],

            "@mongoose": ["src/mongoose/index"],
            "@mongoose/*": ["src/mongoose/*"],

            "@schemas": ["src/mongoose/schemas/index"],
            "@schemas/*": ["src/mongoose/schemas/*"],

            "@terraria": ["src/terraria/index"],
            "@terraria/*": ["src/terraria/*"],

            "@utils": ["src/utils/index"],
            "@utils/*": ["src/utils/*"],
            
            "@/*": ["src/*"]
        },

        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true
    },

    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
}